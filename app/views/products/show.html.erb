<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>
  <% if (current_user) %>
    <div class="review-form">
      <h3 class="form-header">Leave a review!</h3>
      <%= form_for :review, url: "/products/#{@product.id}/reviews" do |f| %>
        <div class="form-group">
          <%= f.text_area :description, placeholder: 'Write your review', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :rating %>
          <%= f.select :rating, [1, 2, 3, 4, 5], class: 'form-control' %>
        </div>
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      <% end %>
    </div>
  <% end %>

  <div class="reviews">
    <h3 class="reviews-header">Customer Reviews</h3>
    <% @reviews.reverse_each do |review| %>
        <%= render 'card', review: review %>
    <% end %>
  </div>

</section>
